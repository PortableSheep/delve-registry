
{
  "info": {
    "id": "github-dashboard",
    "name": "GitHub Dashboard",
    "version": "1.0.0",
    "description": "Monitor GitHub repositories and pull requests",
    "author": "Michael Gunderson",
    "icon": "üêô",
    "executable": "github-dashboard",
    "port": 0
  },
  "frontend": {
    "entry": "frontend/dist/index.html",
    "build_dir": "frontend/dist"
  },
  "permissions": [
    "network.http",
    "storage.local"
  ],
  "config": {
    "github_token": {
      "type": "string",
      "required": true,
      "description": "GitHub Personal Access Token"
    },
    "repositories": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of repositories to monitor (owner/repo format)"
    },
    "refresh_interval": {
      "type": "integer",
      "default": 300,
      "description": "Refresh interval in seconds"
    }
  },
  "actions": {},
  "dependencies": {},
  "health_checks": [
    {
      "name": "github_api_connectivity",
      "interval": "30s",
      "timeout": "10s"
    },
    {
      "name": "token_validity",
      "interval": "300s",
      "timeout": "5s"
    }
  ]
}